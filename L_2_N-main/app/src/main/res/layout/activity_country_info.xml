<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CountryInfoActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/country_flag"/>
        <TextView
                android:text="@string/c_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/country_name"/>
        <TextView
                android:text="@string/c_capital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/country_capital"/>
        <TextView
                android:text="@string/c_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/country_area"/>
        <TextView
                android:text="@string/c_population"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/country_population"/>
        <TextView
                android:text="@string/c_continent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/country_continent"/>
        <Button
                android:text="PoweÃ³t"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/prevButton"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>